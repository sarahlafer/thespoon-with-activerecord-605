<h1>Here are all the restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= restaurant.name %> | <%= link_to "More info", restaurant_path(restaurant) %>
      <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
    </li>
  <% end %>
</ul>


<%= link_to "Add a new restaurant", restaurants_new_path %>
